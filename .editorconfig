# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,json}]
indent_size = 2
indent_style = space

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 119

[*.txt]
max_line_length = 79
